    String purseCode(String code) {
        String purseCode = "";
        if ("HV".equals(code)) {
            purseCode = "过压告警";
        }
        if ("LV".equals(code)) {
            purseCode = "欠压告警";
        }
        if ("HC".equals(code)) {
            purseCode = "过流告警";
        }
        if ("LEAK".equals(code)) {
            purseCode = "漏电告警";
        }
        if ("Err_HV".equals(code)) {
            purseCode = "过压故障";
        }
        if ("Err_LV".equals(code)) {
            purseCode = "欠压故障";
        }
        if ("Err_HC".equals(code)) {
            purseCode = "过流故障";
        }
        if ("Err_LEAK".equals(code)) {
            purseCode = "漏电故障";
        }
        if ("OFFLINE".equals(code)) {
            purseCode = "离线";
        }
        if ("TEST".equals(code)) {
            purseCode = "漏电自检";
        }
        if ("Err_ARC".equals(code)) {
            purseCode = "电弧故障";
        }
        if ("Test_ARC".equals(code)) {
            purseCode = "电弧探测器自检";
        }
        if ("Key_TEST".equals(code)) {
            purseCode = "三相按键测试";
        }
        if ("TRANS".equals(code)) {
            purseCode = "短路故障";
        }
        if ("OPEND".equals(code)) {
            purseCode = "缺相故障";
        }
        return purseCode;
    }

